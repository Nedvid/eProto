@model IEnumerable<eProto.Models.Student>

@{
    ViewBag.Title = "Studenci";
}

<h2>Studenci</h2>

<p>
    @Html.ActionLink("Utwórz nowego studenta", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Szukaj: @Html.TextBox("SearchString")
        <input type="submit" value="Szukaj" />
    </p>
}

<table class="table">
        <tr>
            <th>
                @Html.ActionLink("Nazwisko", "Index", new { sortOrder = ViewBag.NameSortParm })
            </th>
            <th>
                Imię
            </th>
            <th>
                @Html.ActionLink("Data Rozpoczęcia", "Index", new { sortOrder = ViewBag.DateSortParm })
            </th>
            <th></th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstMidName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrollmentDate)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Usuń", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
